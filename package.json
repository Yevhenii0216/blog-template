{
  "name": "honghong.me",
  "private": true,
  "description": "Personal website and blog made using TypeScript, Next.js, Tailwind CSS",
  "author": "小康 <info@honghong.me>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "lint:strict": "eslint --max-warnings=0 src",
    "commit": "gitmoji -c",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "type-check": "tsc",
    "prepare": "husky install",
    "sitemap": "node ./src/scripts/generate-sitemap.mjs",
    "rss": "node ./src/scripts/generate-rss.mjs",
    "new-post": "node ./src/scripts/compose.mjs",
    "analyze": "cross-env ANALYZE=true next build",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "test:watch": "jest --watch",
    "postbuild": "yarn sitemap && yarn rss",
    "test": "jest"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/server": "^11.10.0",
    "@giscus/react": "^2.2.0",
    "@mantine/core": "^5.1.0",
    "@mantine/dates": "^5.1.0",
    "@mantine/dropzone": "^5.1.0",
    "@mantine/form": "^5.1.0",
    "@mantine/hooks": "^5.1.0",
    "@mantine/modals": "^5.1.0",
    "@mantine/next": "^5.1.0",
    "@mantine/notifications": "^5.1.0",
    "@mantine/nprogress": "^5.1.0",
    "@mantine/prism": "^5.1.0",
    "@mantine/rte": "^5.1.0",
    "@mantine/spotlight": "^5.1.0",
    "@prisma/client": "^4.1.1",
    "chalk": "5.0.1",
    "contentlayer": "0.2.7",
    "cookies-next": "^2.1.1",
    "dayjs": "^1.11.4",
    "emoji-unicode": "^2.0.1",
    "esbuild": "0.14.49",
    "framer-motion": "^7.0.0",
    "gitmoji-cli": "^5.0.3",
    "googleapis": "^105.0.0",
    "hastscript": "^7.0.2",
    "next": "^12.2.4",
    "next-auth": "^4.10.3",
    "next-contentlayer": "0.2.7",
    "next-translate": "^1.5.0",
    "prism-react-renderer": "^1.3.5",
    "prismjs": "^1.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-lite-youtube-embed": "^2.3.1",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "5.0.1",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "swr": "^1.3.0",
    "tabler-icons-react": "^1.54.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.2.4",
    "@svgr/webpack": "^6.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@types/react": "18.0.17",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "^8.21.0",
    "eslint-config-next": "^12.2.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "file-loader": "^6.2.0",
    "globby": "13.1.2",
    "husky": "8.0.1",
    "inquirer": "9.1.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "next",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "warn",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "react/display-name": "off",
      "react/jsx-curly-brace-presence": [
        "warn",
        {
          "props": "never",
          "children": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports": "warn",
      "unused-imports/no-unused-vars": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": [
        "warn",
        {
          "groups": [
            [
              "^@?\\w",
              "^\\u0000"
            ],
            [
              "^.+\\.s?css$"
            ],
            [
              "^@/lib",
              "^@/hooks"
            ],
            [
              "^@/data"
            ],
            [
              "^@/components",
              "^@/container"
            ],
            [
              "^@/"
            ],
            [
              "^\\./?$",
              "^\\.(?!/?$)",
              "^\\.\\./?$",
              "^\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\.(?!/?$)",
              "^\\.\\./\\.\\./\\.\\./?$",
              "^\\.\\./\\.\\./\\.\\.(?!/?$)"
            ],
            [
              "^@/types"
            ],
            [
              "^"
            ]
          ]
        }
      ]
    },
    "globals": {
      "React": true,
      "JSX": true
    }
  }
}
